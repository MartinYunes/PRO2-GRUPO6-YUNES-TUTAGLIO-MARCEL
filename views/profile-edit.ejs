					<% } %> 
				</div>
				<div>
					<input type="date" name="fecha" value="<%= result.fecha %>" placeholder="Fecha de nacimiento" class="input_disnio">
				</div>
				<div>
					<input type="number" name="dni" value="<%= result.dni %>" placeholder="DNI" class="input_disnio">
				</div>
				<div>
					<input type="text" name="fotoPerfil" value="<%= result.fotoPerfil %>" placeholder="Enlace a foto de perfil" class="input_disnio">
				</div>
				<div>
