<!DOCTYPE html>
<html lang="es">


<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<!-- Header -->
<% if (locals.user != null) { %>
	<%- include('./partials/headerLogueado') %><% } else { %>
		<%- include("./partials/header") %>
<% } %>
<!-- Header -->

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h1><%= mensaje %></h1>
			<% if (productos && productos.length > 0) { %>
				<div class="row">
					<% for (let i = 0; i < productos.length; i++) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/detail/<%= productos[i].id %>">
									<figure class="product-box_image">
										<img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombreProducto %>">
									</figure>
									<article class="product-box_data">
										<h2><%= productos[i].nombreProducto %></h2>
										<p><a href="/profile/<%= productos[i].usuario.id %>"> By: <%= productos[i].usuario.usuario %></a> </p>
										<p>Descripción: <%= productos[i].descripcion %></p>
										<p>Comentarios: <%= productos[i].comentarios.length %></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
				</div>
			<% } %>


<!-- footer -->
<%- include("./partials/footer") %>
<!-- /footer -->
</body>

</html>