<!DOCTYPE html>
<html lang="es">


<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<!-- Header -->
<% if (locals.user != null) { %>
	<%- include('./partials/headerLogueado') %><% } else { %>
		<%- include("./partials/header") %>
<% } %>
<!-- Header -->

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < id.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= id[i] %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= imagen[i] %>" alt="<%= title[i] %>">
							</figure>
							<article class="product-box_data">
								<h2><%= title[i] %></h2>
								<p><%= descripcion[i] %></p>
								<p>Comentarios: <%= comentarios[i].length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>	


<!-- footer -->
<%- include("./partials/footer") %>
<!-- /footer -->
</body>

</html>