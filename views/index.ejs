<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
	<!-- Header -->
	<%- include("./partials/head") %>
		<!-- Header -->
		<% if (locals.user !=null) { %>
			<%- include('./partials/headerLogueado') %>
				<% } else { %>
					<%- include("./partials/header") %>
						<% } %>

							<!-- Banner -->
							<div class="banner">
								<img class="banner" src="images/fondo.jpeg" alt="Banner de ofertas">
							</div>
							<!-- /Banner -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Novedades</h2>
									</div>
									<!-- Show the "ultimos" products -->
									<% for (let i=0; i < result.length; i++) { %>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/product/<%= result[i].id %>">
													<figure class="product-box_image">
														<img src="/images/products/<%= result[i].imagen %>"
															alt="<%= result[i].nombreProducto %>">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= result[i].nombreProducto %>
														</h2>
														<p>
															<%= result[i].descripcion %>
														</p>
														<p>Comentarios: <%= result[i].comentario.length %>
														</p>
														<a href="/profile/<%= result[i].Usuario.id %>">
															<p>Creado por: <%= result[i].Usuario.usuario %>
															</p>
														</a>
													</article>
												</a>

											</section>
										</div>
										<% } %>

											<!-- /Novedades -->
											<!-- Más comentados -->

											<!-- /Más comentados -->


											<!-- footer -->
											<%- include("./partials/footer") %>
												<!-- /footer -->
												</body>

</html>