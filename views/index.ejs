<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
	<!-- Header -->
<%- include("./partials/header") %>
	<!-- /Header -->
	
<% if (locals.user != undefined) {
	
}  %>

	<!-- Banner -->
	<div class="banner">
		<img class="banner" src="images/fondo.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < 6	; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= id[i] %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= imagen[i] %>" alt="<%= title[i] %>">
							</figure>
							<article class="product-box_data">
								<h2><%= title[i] %></h2>
								<p><%= descripcion[i] %></p>
								<p>Comentarios: <%= comentarios[i].length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 6; i < title.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= id[i] %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= imagen[i] %>" alt="<%= title[i] %>">
							</figure>
							<article class="product-box_data">
								<h2><%= title[i] %></h2>
								<p><%= descripcion[i] %></p>
								<p>Comentarios: <%= comentarios[i].length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>