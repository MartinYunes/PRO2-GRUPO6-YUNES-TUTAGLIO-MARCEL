<!DOCTYPE html>
<html lang="es">


<!-- Include Head -->
<%- include("./partials/head") %>
	<!-- Include Head -->

	<!-- Header -->
	<% if (locals.user !=null) { %>
		<%- include('./partials/headerLogueado') %>
			<% } else { %>
				<%- include("./partials/header") %>
					<% } %>
						<!-- Header -->

						<!-- /Header -->

						<!-- Novedades -->
						<div class="container products-wrapper">
							<div class="row">
								<div class="col-12">
									<h2 class="products-title">Editar productos</h2>
								</div>
								<!-- Show the "ultimos" products -->

								<form action="/product/editar/<%= result.id %>" method="post" class="formulario">

									<div>
										<input type="text" name="imagen" value="<%= result.imagen %>"
											placeholder="Foto del producto" class="input_disnio">
										<% if (locals.errors && errors.imagen) { %>
											<p style="color:white">
												<%= errors.imagen.msg %>
											</p>
											<% } %>
									</div>
									<div>
										<input type="text" name="nombreProducto" value="<%= result.nombreProducto %>"
											placeholder="Nombre del producto" class="input_disnio">
										<% if (locals.errors && errors.nombreProducto) { %>
											<p style="color:white">
												<%= errors.nombreProducto.msg %>
											</p>
											<% } %>
									</div>
									<div>
										<input type="text" name="descripcion" value="<%= result.descripcion %>"
											placeholder="DescripciÃ³n del producto" class="input_disnio">
										<% if (locals.errors && errors.descripcion) { %>
											<p style="color:white">
												<%= errors.descripcion.msg %>
											</p>
											<% } %>

									</div>
									<div>
										<button type="submit" class="input_disnio">Editar</button>
									</div>
								</form>
								</h2>


								<!-- footer -->
								<%- include("./partials/footer") %>
									<!-- /footer -->

									</body>

</html>