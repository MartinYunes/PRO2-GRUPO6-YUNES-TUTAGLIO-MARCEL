<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<!-- Header -->
<%- include("./partials/headerLogueado") %>
<!-- Header -->

	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">

			
			
	
				<img src="<%= foto_perfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario %> 
						<a href="/profile/profile-edit"> <!-- aca agregar  el nombre de usuario con una funcion -->
							<i class="fas fa-cog"></i>
						</a>

					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>EMAIL : <%= email %></li>
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < title.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= id[i] %>">
							<figure class="product-box_image">
								<img src="<%= imagen[i] %>" alt="<%= title[i] %>">
							</figure>
							<article class="product-box_data">
								<h2><%= title[i] %></h2>
								<p><%= descripcion[i] %></p>
								<p>Comentarios: <%= comentarios[i].length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

<!-- footer -->
<%- include("./partials/footer") %>
<!-- /footer -->
</body>	
</html>