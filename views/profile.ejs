<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include("./partials/head") %>
	<!-- Include Head -->

	<!-- Header -->
	<% if (locals.user !=null) { %>
		<%- include('./partials/headerLogueado') %>
			<% } else { %>
				<%- include("./partials/header") %>
					<% } %>
						<!-- Header -->

						<!-- /Header -->

						<!-- Datos del usuario -->
						<section class="info-usuario container products-wrapper">
							<div class="row">
								<div class="img-container offset-3 col-2">




									<img src="/images/users/<%= usuario.fotoPerfil %>" alt="foto de perfil"
										class="foto-perfil">
								</div>
								<div class="data-container col-6">
									<div class="d-flex align-items-center ">
										<h1 class="main-title">
											<%= usuario.usuario %>
												<% if (locals.user !=null) { %>
													<% if (locals.user.id==usuario.id) { %>
														<a href="/profile/profile-edit/<%= usuario.id %>">
															<!-- aca agregar  el nombre de usuario con una funcion -->
															<i class="fas fa-cog"></i>
														</a>
														<% } }%>

										</h1>
										<a class="btn mt-3 ml-4" href="">SEGUIR</a>
									</div>
									<div>
										<ul class="">
											<li class="dato_usuario">EMAIL : <%= usuario.email %>
											</li>
											<li class="dato_usuario">PRODUCTOS: <%= usuario.producto.length %>
											</li>
											<li class="dato_usuario">COMENTARIOS: <%= usuario.comentario.length %>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</section>
						<!-- /Datos del usuario -->

						<!-- Mis productos -->
						<div class="container products-wrapper">
							<div class="row">
								<div class="col-12">
									<h2 class="products-title">Productos de <%= usuario.usuario %>
									</h2>
								</div>
								<!-- Show mis productos -->
								<% for (let i=0; i < usuario.producto.length; i++) { %>
									<div class="col-12 col-sm-6 col-lg-3">
										<section class="product-box">
											<a href="/product/<%= usuario.producto[i].id %>">
												<figure class="product-box_image">
													<img src="/images/products/<%= usuario.producto[i].imagen %>"
														alt="<%= usuario.producto[i].nombreProducto %>">
												</figure>
												<article class="product-box_data">
													<h2>
														<%= usuario.producto[i].nombreProducto %>
													</h2>
													<p>
														<%= usuario.producto[i].descripcion %>
													</p>
													<p>Comentarios: <%= usuario.comentario.length %>
													</p>
												</article>
											</a>
										</section>
									</div>
									<% } %>
							</div>
						</div>
						<!-- /Mis productos -->
						<!-- footer -->
						<%- include("./partials/footer") %>
							<!-- /footer -->
							</body>

</html>