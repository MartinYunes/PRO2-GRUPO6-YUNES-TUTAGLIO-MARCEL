<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<!-- Header -->
<%- include("./partials/header") %>
<!-- Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= title %></h2> 
			<p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<p><% usuarioAutor %></p>
					<img src="/images/products/<%= imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						
						<% for (let i = 0; i < comentarios.length; i++) { %>
							<article>
								<img src="<%= comentarios[i].imagen_perfil %>" alt="">
								<div class="data">
									<p class="user">
										<strong> <a href="/profile/<%= comentarios[i].id %>"><%= comentarios[i].nombre %>: </a> </strong> <!--cambiar /profile por /profile/ tag EJS id -->
										<%= comentarios[i].comentario %>
									</p>
								</div>
							</article>
						<% } %>

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
					</form>
					<a href="/product/<%= id %>">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</a>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

<!-- footer -->
<%- include("./partials/footer") %>
<!-- /footer -->

</body>	
</html>